generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Answers {
  AnswerId         Int              @id @default(autoincrement())
  AnswerCollection Int
  AnswerImage      Int
  AnswerText       String           @db.VarChar(500)
  Collection       Collections      @relation(fields: [AnswerCollection], references: [CollectionId])
  CollectionImage  CollectionImages @relation(fields: [AnswerImage], references: [ImageId])

  @@unique([AnswerId])
}

model CollectionImages {
  ImageId         Int         @id @default(autoincrement())
  ImageCollection Int
  ImageAnswers    Int         @default(0)
  ImageIdentifier String      @unique @db.VarChar(120)
  ImageDate       DateTime    @default(now())
  Collection      Collections @relation(fields: [ImageCollection], references: [CollectionId])
  Answers         Answers[]

  @@unique([ImageId])
}

model Collections {
  CollectionId          Int                @id @default(autoincrement())
  CollectionName        String             @db.VarChar(150)
  CollectionDescription String             @db.VarChar(500)
  CollectionQuantity    Int                @default(0)
  CollectionAnswers     Int                @default(0)
  CollectionCreation    DateTime           @default(now())
  Answers               Answers[]
  CollectionImages      CollectionImages[]

  @@unique([CollectionId])
}
